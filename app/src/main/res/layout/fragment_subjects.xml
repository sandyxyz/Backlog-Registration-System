<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragment.Subjects">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:src="@drawable/books" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:text="Subjects" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="18dp"
        app:cardCornerRadius="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OverAll Grade"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="50sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="250sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="5sp">

            <View
                android:layout_width="49sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:background="@color/c_1" />

            <TextView

                android:layout_width="230sp"
                android:layout_height="match_parent"
                android:text="CSE423:VIRTUALIZATION AND CLOUD COMPUTING"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/vm"
                android:layout_width="110sp"
                android:layout_height="47sp"
                android:text="A"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/c_1"
                android:layout_marginLeft="10sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">

            <View
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:background="@color/c_3" />

            <TextView

                android:layout_width="230sp"
                android:layout_height="match_parent"
                android:text="INT222:ADVANCED WEB DEVELOPMENT"
                android:textColor="@color/black"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/node"
                android:layout_width="110sp"
                android:layout_height="47sp"
                android:text="A+"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="@color/c_3"
                android:layout_marginLeft="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">

            <View
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:background="@color/C_6" />

            <TextView

                android:layout_width="230sp"
                android:layout_height="match_parent"
                android:text="CSE225:DEVELOPING ANDROID APPS"
                android:textColor="@color/black"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/android"
                android:layout_width="110sp"
                android:layout_height="47sp"
                android:text="E"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/C_6"
                android:layout_marginLeft="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">

            <View
                android:layout_width="49sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:background="@color/purple_200" />

            <TextView

                android:layout_width="230sp"
                android:layout_height="match_parent"
                android:text="INT252:WEB APP DEVELOPMENT WITH REACTJS"
                android:textColor="@color/black"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/react"
                android:layout_width="110sp"
                android:layout_height="47sp"
                android:text="I"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/purple_200"
                android:layout_marginLeft="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">

            <View
                android:layout_width="49sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:background="@color/teal_700" />

            <TextView

                android:layout_width="230sp"
                android:layout_height="match_parent"
                android:text="PEA308:ADVANCED ANALYTICAL SKILLS-II"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/pea"
                android:layout_width="110sp"
                android:layout_height="47sp"
                android:text="A+"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="@color/teal_700"
                android:layout_marginLeft="10sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">

            <View
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:background="@color/color_1" />

            <TextView
                android:layout_width="230sp"
                android:layout_height="match_parent"
                android:text="PES319:SOFT SKILLS-II"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pes"
                android:layout_width="110sp"
                android:layout_height="47sp"
                android:text="B+"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/color_1"
                android:layout_marginLeft="10sp" />

        </LinearLayout>




    </LinearLayout>
    </RelativeLayout>
</ScrollView>