<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#91B4FC"
    tools:context=".fragment.rms">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         app:cardElevation="18dp"
        app:cardCornerRadius="18dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="10dp"
        android:text="Message Type"
        android:textColor="#E26E87"/>
            <Spinner
                android:id="@+id/s1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"

                android:entries="@array/spinner"
                android:background="@drawable/spinnerbg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:text="Master Category"
                android:textColor="#E26E87"/>
            <Spinner
                android:id="@+id/s2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:entries="@array/spinner2"
                android:background="@drawable/spinnerbg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:text="Department"
                android:textColor="#E26E87"/>
            <Spinner
                android:id="@+id/s3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:entries="@array/spinner3"
                android:background="@drawable/spinnerbg"/>

            <EditText
                android:id="@+id/getfeedback"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/back_bg5"
                android:textSize="14sp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"

                android:gravity="start"
                android:hint="Please write your query...."
                android:textColor="@color/black"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="18dp"
               android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/blueback"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/texttt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:text="Next"
                    android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>